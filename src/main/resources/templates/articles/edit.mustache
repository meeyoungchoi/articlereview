{{>layouts/header}}
<div class="jumbotron">
    <h1>Article 수정</h1>
    <hr>
    <p>articles/edit.mustache</p>
</div>
<form class="container" method="post" action="/articles/update/{{article.id}}">
    <div class="form-group">
        <label for="title">제목</label>
        <input type="text" name="title" class="form-control" id="article-title" value="{{article.title}}">
    </div>
    <div class="form-group">
        <label for="content">내용</label>
        <textarea class="form-control" name="content" id="article-content"  rows="3">{{article.content}}</textarea>
    </div>
    <button type="submit" class="btn btn-info">수정</button>
</form>
<div class="contianer">
    <a class="btn btn-danger" href="/">취소</a>
</div>





{{>layouts/footer}}