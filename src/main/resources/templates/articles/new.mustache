{{>layouts/header}}
<div class="jumbotron">
    <h1>Article 등록</h1>
    <hr>
    <p>articles/new.mustache</p>
</div>
<form class="container" method="post" action="/articles/new">
    <div class="form-group">
        <label for="title">제목</label>
        <input type="text" name="title" class="form-control" id="article-title" placeholder="제목을 입력하세요">
    </div>
    <div class="form-group">
        <label for="content">내용</label>
        <textarea class="form-control" name="content" id="article-content" placeholder="내용을 입력하세요" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">제출</button>
</form>
<div class="contianer">
    <a class="btn btn-danger" href="/">취소</a>
</div>
{{>layouts/footer}}